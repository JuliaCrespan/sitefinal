    import { getAuth,createUserWithEmailAndPassword, signInWithEmailAndPassword, signOut } from "https://www.gstatic.com/firebasejs/11.1.0/firebase-auth.js";
    import { getStorage, ref, uploadBytesResumable, getDownloadURL } from "https://www.gstatic.com/firebasejs/11.1.0/firebase-storage.js";
    const firebaseConfig = {
        apiKey: "AIzaSyA6MH4IiYrFBx4UtT0ijXcx5jqCwybSNlM",
        authDomain: "campo-conecta-792a6.firebaseapp.com",
        projectId: "campo-conecta-792a6",
        storageBucket: "campo-conecta-792a6.appspot.com",
        messagingSenderId: "722459678882",
        appId: "1:722459678882:web:a5293441f51a10c764dffb",
        measurementId: "G-CNWKCNB64Y"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    /// Fun√ß√£o para chamar o backend (App Script) que envia a mensagem via WhatsApp
    async function sendWhatsAppNotification(phoneNumber, message) {
    const apiKey = "1253447"; // Substitua pelo seu c√≥digo da API do CallMeBot
    const phoneNum = '+554396811736'
    const url = `https://api.callmebot.com/whatsapp.php?phone=${phoneNum}&text=${encodeURIComponent(message)}&apikey=${apiKey}`;

    try {
        const response = await fetch(url);
        const result = await response.text();
        console.log("Mensagem enviada:", result);
    } catch (error) {
        console.error("Erro ao enviar mensagem:", error);
    }
}

    // Fun√ß√£o para carregar postagens em tempo real
async function loadPostsRealtime() {
    const postList = document.getElementById('postList');
    postList.innerHTML = ''; // Limpa a lista antes de renderizar os posts novamente

    try {
        const postsRef = collection(db, "posts");

        // Carrega as postagens existentes uma vez
        const querySnapshot = await getDocs(postsRef); // Carrega postagens existentes
        querySnapshot.forEach((doc) => {
            const post = doc.data();
            renderPost(post, doc.id); // Renderiza cada post
        });

        // Ativa o onSnapshot para escutar altera√ß√µes em tempo real
        onSnapshot(postsRef, (snapshot) => {
            console.log("Snapshot recebido:", snapshot); // Verifique se os dados est√£o sendo recebidos
            postList.innerHTML = ''; // Limpa a lista antes de renderizar novamente

            snapshot.forEach((doc) => {
                const post = doc.data();
                renderPost(post, doc.id); // Renderiza cada post
            });
        });

    } catch (error) {
        alert('Erro ao carregar postagens: ' + error.message);
    }
}

async function renderPost(post, postId) {
    const postList = document.getElementById('postList');
    const li = document.createElement('li');
    li.setAttribute('data-post-id', postId); // Adiciona o postId como atributo

    const contentDiv = document.createElement('div');
    contentDiv.className = 'post-content';
    contentDiv.textContent = post.content;

    // Se houver uma URL de imagem, exibe a imagem
    if (post.imageURL) {
        const imageElement = document.createElement('img');
        imageElement.src = post.imageURL;
        imageElement.alt = 'Post image';
        imageElement.className = 'post-image';
        li.appendChild(imageElement);
    }

    const metaDiv = document.createElement('div');
    metaDiv.className = 'post-meta';

    // Carregar o nome do autor da postagem
    try {
        const userRef = doc(db, "users", post.uid);
        const userDoc = await getDoc(userRef);
        const userName = userDoc.exists() ? userDoc.data().name : 'Usu√°rio Desconhecido';

        metaDiv.innerHTML = `<span class='post-author'>Por: ${userName}</span> <span class='timestamp'>${new Date(post.timestamp?.toDate()).toLocaleString()}</span>`;
    } catch (error) {
        console.error('Erro ao buscar o nome do usu√°rio:', error);
        metaDiv.innerHTML = `<span class='post-author'>Por: Usu√°rio Desconhecido</span> <span class='timestamp'>${new Date(post.timestamp?.toDate()).toLocaleString()}</span>`;
    }


    // Criando o bot√£o de Interesse
const interestButton = document.createElement('button');
interestButton.textContent = 'Demonstrar Interesse';
interestButton.className = 'interest-button';
interestButton.addEventListener('click', () => declareInterest(postId, post.uid));
  // Bot√£o "Iniciar Chat"
  const startChatButton = document.createElement('button');
    startChatButton.textContent = 'Iniciar Chat';
    startChatButton.addEventListener('click', () => startChat(postId, post.uid)); // Passa o ID do post e o ID do dono do post

// Adicionando os bot√µes e conte√∫do ao post
li.appendChild(contentDiv);
li.appendChild(metaDiv);
li.appendChild(interestButton);
li.appendChild(startChatButton)

postList.appendChild(li);

    
}
// Fun√ß√£o para mostrar ou esconder o campo de upload de imagem de CNH
document.getElementById('userType').addEventListener('change', function() {
    var userType = this.value;
    var cnhField = document.getElementById('cnhField');
    
    // Se o tipo for "fretista", mostra o campo para enviar a imagem da CNH
    if (userType === 'fretista') {
        cnhField.style.display = 'block';
    } else {
        cnhField.style.display = 'none';
    }
});

// Fun√ß√£o para enviar a imagem para o banco de dados
document.getElementById('registerButton').addEventListener('click', async function() {
    var userType = document.getElementById('userType').value;
    
    if (userType === 'fretista') {
        var cnhImage = document.getElementById('cnhImage').files[0];
        
        if (!cnhImage) {
            alert('Por favor, envie a foto da sua CNH.');
            return;
        }
        
        // Aqui voc√™ pode fazer o upload da imagem para o banco de dados
        // Vamos supor que voc√™ use o Firebase Storage, por exemplo:
        const storageRef = firebase.storage().ref('cnhs/' + cnhImage.name);
        await storageRef.put(cnhImage);
        
        alert('Imagem da CNH enviada com sucesso!');
    }

    // Voc√™ pode adicionar o restante do c√≥digo para salvar os outros dados no banco de dados
});
    // Fun√ß√£o para declarar interesse
    async function declareInterest(postId, postOwnerId) {
    const user = auth.currentUser;
    if (!user) {
        alert("Voc√™ precisa estar logado para demonstrar interesse.");
        return;
    }

    if (!postId || !postOwnerId) {
        alert("Informa√ß√µes do post ou do autor est√£o incompletas.");
        return;
    }

    try {
         // Buscar dados do post
         const postRef = doc(db, "posts", postId);
        const postDoc = await getDoc(postRef);
        if (!postDoc.exists()) {
            alert("O post n√£o existe.");
            return;
        }
        const postContent = postDoc.data().content;

        // Buscar dados do usu√°rio interessado
        const userRef = doc(db, "users", user.uid);
        const userDoc = await getDoc(userRef);

        if (!userDoc.exists()) {
            alert("Usu√°rio n√£o encontrado.");
            return;
        }

        const userName = userDoc.data().name;
        const userPhone = userDoc.data().phone || "Telefone n√£o informado";

        // Buscar dados do dono do post
        const ownerRef = doc(db, "users", postOwnerId);
        const ownerDoc = await getDoc(ownerRef);

        if (!ownerDoc.exists()) {
            alert("Dono do post n√£o encontrado.");
            return;
        }
        const ownerPhone = ownerDoc.data().phone;

        // Atualizar a lista de interessados no post
        await updateDoc(postRef, {
            interestedUsers: arrayUnion({
                name: userName,
                phone: userPhone
            })
        });

        // Atualizar notifica√ß√µes do dono do post
        await updateDoc(ownerRef, {
    notifications: arrayUnion({
        type: "interest",
        from: `Nome: ${userName}, Telefone: ${userPhone}`,
        postId: postId,
        timestamp: new Date().toISOString()
    })
});

        // Criar a mensagem para enviar via WhatsApp
        const message = `üöÄ Algu√©m se interessou em um post!\n\nüë§ Nome: ${userName}\nüìû Tipo de usu√°rio: ${userType}\n Contato: ${userPhone}\nüìå Post: ${postContent}`;

        // Enviar mensagem pelo WhatsApp usando CallMeBot
        await sendWhatsAppNotification(ownerPhone, message);

        alert("Interesse declarado com sucesso! O dono do post foi notificado no WhatsApp.");
    } catch (error) {
        alert("Erro ao declarar interesse: " + error.message);
    }
}

    // Fun√ß√£o de postagem
    document.getElementById('postButton').addEventListener('click', async () => {
        const postContent = document.getElementById('postContent').value;
        const imageFile = document.getElementById('imageUpload').files[0];
        const user = auth.currentUser;

        console.log('Conte√∫do da postagem:', postContent);
        console.log('Arquivo da imagem:', imageFile);

        if (!postContent.trim()) {
            alert('O conte√∫do da postagem n√£o pode estar vazio.');
            return;
        }

        try {
            let imageURL = null;

            // Fun√ß√£o para converter imagem para base64
            const convertToBase64 = (file) => {
                return new Promise((resolve, reject) => {
                    const reader = new FileReader();
                    reader.onloadend = () => resolve(reader.result);
                    reader.onerror = reject;
                    reader.readAsDataURL(file);
                });
            };

            // Se houver uma imagem, converte para base64
            if (imageFile) {
                const base64Image = await convertToBase64(imageFile);
                console.log('Imagem convertida para base64:', base64Image);

                // Agora podemos criar a postagem, com a imagem convertida para base64
                const postRef = doc(collection(db, "posts"));
                await setDoc(postRef, {
                    uid: user.uid,
                    content: postContent,
                    imageURL: base64Image,  // Usa a imagem em base64
                    timestamp: new Date(),
                    interestedUsers: []
                });

                console.log('Postagem criada com sucesso!');
                alert('Postagem criada com sucesso!');
                document.getElementById('postContent').value = '';
                document.getElementById('imageUpload').value = '';  // Limpar o campo de upload de imagem
            } else {
                // Se n√£o houver imagem, apenas cria a postagem
                const postRef = doc(collection(db, "posts"));
                await setDoc(postRef, {
                    uid: user.uid,
                    content: postContent,
                    timestamp: new Date(),
                    interestedUsers: []
                });

                console.log('Postagem criada sem imagem!');
                alert('Postagem criada com sucesso!');
                document.getElementById('postContent').value = '';
            }

        } catch (error) {
            console.error('Erro ao criar postagem:', error);
            alert('Erro ao criar postagem: ' + error.message);
        }
    });

    // Fun√ß√£o para mostrar o feed
    async function showFeed(userType) {
        document.getElementById('authContainer').classList.add('hidden');
        document.getElementById('feedContainer').classList.remove('hidden');

        const feedTitle = document.getElementById('feedTitle');
        const oppositeType = userType === "produtor" ? "comprador" : "produtor";
        feedTitle.textContent = `Recomenda√ß√µes de ${oppositeType}s:`;

        loadPostsRealtime();
    }

    // Fun√ß√£o de login
    document.getElementById('loginButton').addEventListener('click', async () => {
        const email = document.getElementById('emailLogin').value;
        const password = document.getElementById('passwordLogin').value;

        try {
            const userCredential = await signInWithEmailAndPassword(auth, email, password);
            const user = userCredential.user;

            const userDoc = await getDoc(doc(db, "users", user.uid));
            if (userDoc.exists()) {
                const userType = userDoc.data().userType;
                showFeed(userType);
            } else {
                throw new Error("Usu√°rio n√£o encontrado no Firestore.");
            }
        } catch (error) {
            alert('Erro ao fazer login: ' + error.message);
        }
    });


// Fun√ß√£o de logout
async function logout() {
    try {
        await signOut(auth); // Faz o logout
        alert('Voc√™ saiu!');

        // Oculta o feed e mostra o container de autentica√ß√£o
        document.getElementById('feedContainer').classList.add('hidden');
        document.getElementById('authContainer').classList.remove('hidden');
    } catch (error) {
        console.error("Erro ao fazer logout:", error);
        alert("Ocorreu um erro ao tentar sair. Tente novamente.");
    }
}

// Configura o evento de clique no bot√£o "Sair"
document.addEventListener('DOMContentLoaded', function () {
    document.getElementById('logoutButton').addEventListener('click', logout);
});

    // Fun√ß√£o de perfil
    document.getElementById('profileButton').addEventListener('click', async () => {
        const user = auth.currentUser;
        if (!user) {
            alert('Usu√°rio n√£o autenticado.');
            return;
        }

        try {
            const userDoc = await getDoc(doc(db, "users", user.uid));
            if (userDoc.exists()) {
                const userData = userDoc.data();

                // Atualiza informa√ß√µes do perfil
                document.getElementById('profileEmail').innerText = userData.email || 'N√£o informado';
                document.getElementById('profileUserType').innerText = userData.userType || 'N√£o especificado';
                document.getElementById('profilePhone').innerText = userData.phone || 'N√£o informado';

                // Atualiza notifica√ß√µes
                const notificationsList = document.getElementById('notificationsList');
                notificationsList.innerHTML = ''; // Limpa as notifica√ß√µes anteriores
                const notifications = userData.notifications || [];
                if (notifications.length > 0) {
                    notifications.forEach((notif, index) => {
                        const li = document.createElement('li');
                        li.innerHTML = `<strong>Notifica√ß√£o ${index + 1}:</strong> Interesse no post ${notif.postId} por ${notif.from}`;
                        notificationsList.appendChild(li);
                    });
                } else {
                    notificationsList.innerHTML = '<li>Sem notifica√ß√µes.</li>';
                }

                // Redireciona para a p√°gina de perfil
                document.getElementById('feedContainer').classList.add('hidden');
                document.getElementById('profileContainer').classList.remove('hidden');
            } else {
                alert('Perfil n√£o encontrado.');
            }
        } catch (error) {
            console.error('Erro ao buscar o perfil:', error);
            alert('Ocorreu um erro ao carregar o perfil.');
        }
    });
    // Alternar entre login e registro
    window.toggleForms = function toggleForms() {
        const loginForm = document.getElementById('loginForm');
        const registerForm = document.getElementById('registerForm');
        const toggleLink = document.getElementById('toggleAuth');

        if (loginForm.classList.contains('hidden')) {
            loginForm.classList.remove('hidden');
            registerForm.classList.add('hidden');
            toggleLink.innerHTML = "Ainda n√£o tem uma conta? <a href='#'>Registre-se aqui</a>";
        } else {
            loginForm.classList.add('hidden');
            registerForm.classList.remove('hidden');
            toggleLink.innerHTML = "J√° tem uma conta? <a href='#'>Fa√ßa login aqui</a>";
        }
    };
// Fun√ß√£o para retornar ao feed
function returnToFeed() {
    document.getElementById('profileContainer').classList.add('hidden'); // Oculta o perfil
    document.getElementById('feedContainer').classList.remove('hidden'); // Mostra o feed
}

// Configura o evento de clique no bot√£o "Voltar ao Feed"
document.addEventListener('DOMContentLoaded', function () {
    document.getElementById('returnToFeedButton').addEventListener('click', returnToFeed);
});
 // Fun√ß√£o para registro
 document.getElementById('registerButton').addEventListener('click', async () => {
        const email = document.getElementById('emailRegister').value;
        const password = document.getElementById('passwordRegister').value;
        const userType = document.getElementById('userType').value;
        const phoneNumber = document.getElementById('phoneNumber').value;
        const name = document.getElementById('name').value;  // Captura o nome do usu√°rio

        if (!email || !password) {
            alert('Por favor, preencha todos os campos.');
            return;
        }

        try {
            const userCredential = await createUserWithEmailAndPassword(auth, email, password);
            const user = userCredential.user;

            await setDoc(doc(db, "users", user.uid), {
                email: email,
                userType: userType,
                phone: phoneNumber,
                name: name,
                notifications: []
            });

            alert('Conta criada com sucesso!');
            showFeed(userType);
        } catch (error) {
            alert('Erro ao registrar usu√°rio: ' + error.message);
        }
        document.addEventListener("DOMContentLoaded", function() {
        const postList = document.getElementById("postList");
        const savedPosts = JSON.parse(localStorage.getItem("posts")) || [];
        savedPosts.forEach(post => renderPost(post));

        const notificationList = document.getElementById("notificationList");
        const savedNotifications = JSON.parse(localStorage.getItem("notifications")) || [];
        savedNotifications.forEach(notif => renderNotification(notif));
    });

    function renderPost(content) {
        const postList = document.getElementById("postList");
        const li = document.createElement("li");
        li.classList.add("post");
        li.innerHTML = `${content} <
        
        div class="like-comment">
            <button onclick="likePost(this)"><i class="fas fa-thumbs-up"></i></button>
            <button onclick="commentPost(this)"><i class="fas fa-comment"></i></button>
        </div>`;
        postList.appendChild(li);
    }

    function renderNotification(content) {
        const notificationList = document.getElementById("notificationList");
        const li = document.createElement("li");
        li.textContent = content;
        notificationList.appendChild(li);
    }



    function toggleTheme() {
        document.body.classList.toggle("dark-mode");
    }
    });
    // Fun√ß√£o para fretistas demonstrarem interesse em fretes
async function declareFreightInterest(postId, postOwnerId) {
    const user = auth.currentUser;
    if (!user) {
        alert("Voc√™ precisa estar logado para demonstrar interesse.");
        return;
    }

    // Verificar se o usu√°rio √© fretista
    const userRef = doc(db, "users", user.uid);
    const userDoc = await getDoc(userRef);

    if (!userDoc.exists() || userDoc.data().role !== "fretista") {
        alert("Apenas fretistas podem demonstrar interesse em fretes.");
        return;
    }

    try {
        // Buscar dados do post
        const postRef = doc(db, "posts", postId);
        const postDoc = await getDoc(postRef);
        if (!postDoc.exists()) {
            alert("O post n√£o existe.");
            return;
        }

        // Buscar dados do dono do post
        const ownerRef = doc(db, "users", postOwnerId);
        const ownerDoc = await getDoc(ownerRef);
        if (!ownerDoc.exists()) {
            alert("Dono do post n√£o encontrado.");
            return;
        }

        const userName = userDoc.data().name;
        const userPhone = userDoc.data().phone || "Telefone n√£o informado";
        const ownerPhone = ownerDoc.data().phone;

        // Atualizar a lista de interessados no post
        await updateDoc(postRef, {
            interestedFreight: arrayUnion({
                name: userName,
                phone: userPhone,
                id: user.uid
            })
        });

        // Atualizar notifica√ß√µes do dono do post
        await updateDoc(ownerRef, {
            notifications: arrayUnion({
                type: "freight_interest",
                from: {
                    name: userName,
                    phone: userPhone,
                    id: user.uid
                },
                postId: postId,
                timestamp: new Date().toISOString()
            })
        });

        alert("Interesse registrado com sucesso! O dono do post foi notificado.");

    } catch (error) {
        console.error("Erro ao declarar interesse em frete:", error);
        alert("Ocorreu um erro ao tentar declarar interesse. Tente novamente.");
    }
}
// Fun√ß√£o para limpar notifica√ß√µes
async function clearNotifications() {
    console.log("Fun√ß√£o clearNotifications chamada!"); // Depura√ß√£o
    const user = auth.currentUser;
    if (!user) {
        alert("Voc√™ precisa estar logado para limpar as notifica√ß√µes.");
        return;
    }

    try {
        // Refer√™ncia ao documento do usu√°rio no Firestore
        const userRef = doc(db, "users", user.uid);
        console.log("Refer√™ncia do usu√°rio:", userRef); // Depura√ß√£o

        // Atualiza o documento do usu√°rio, definindo o campo "notifications" como um array vazio
        await updateDoc(userRef, {
            notifications: []
        });
        console.log("Notifica√ß√µes limpas no Firestore."); // Depura√ß√£o

        // Atualiza a interface do usu√°rio
        const notificationsList = document.getElementById('notificationsList');
        notificationsList.innerHTML = '<li>Sem notifica√ß√µes no momento.</li>';

        alert("Notifica√ß√µes limpas com sucesso!");
    } catch (error) {
        console.error("Erro ao limpar notifica√ß√µes:", error); // Depura√ß√£o
        alert("Ocorreu um erro ao tentar limpar as notifica√ß√µes. Tente novamente.");
    }
}

// Configura o evento de clique no bot√£o "Limpar Notifica√ß√µes"
document.addEventListener('DOMContentLoaded', function () {
    document.getElementById('clearNotificationsButton').addEventListener('click', clearNotifications);
});

// Vari√°vel global para armazenar o ID do chat ativo
let activeChatId = null;

// Fun√ß√£o para iniciar o chat
async function startChat(postId, postOwnerId) {
    const user = auth.currentUser;
    if (!user) {
        alert("Voc√™ precisa estar logado para iniciar um chat.");
        return;
    }

    const userId = user.uid;

    try {
        // Verifica se j√° existe um chat entre esses usu√°rios para o mesmo post
        const chatsRef = collection(db, "chats");
        const q = query(
            chatsRef,
            where("users", "array-contains", userId), // Verifica se o usu√°rio atual est√° no chat
            where("postId", "==", postId) // Verifica se o chat √© para o mesmo post
        );
        const querySnapshot = await getDocs(q);

        let chatId = null;

        // Se j√° existir um chat, usa o ID desse chat
        if (!querySnapshot.empty) {
            querySnapshot.forEach((doc) => {
                const chatData = doc.data();
                if (chatData.users.includes(postOwnerId)) { // Verifica se o dono do post est√° no chat
                    chatId = doc.id;
                }
            });
        }

        // Se n√£o existir um chat, cria um novo
        if (!chatId) {
            const chatRef = await addDoc(collection(db, "chats"), {
                users: [userId, postOwnerId], // IDs dos participantes
                messages: [], // Array de mensagens vazio
                createdAt: new Date().toISOString(), // Data de cria√ß√£o
                postId: postId // ID do post relacionado
            });
            chatId = chatRef.id;
            console.log("Novo chat criado com ID:", chatId);
        } else {
            console.log("Chat existente encontrado com ID:", chatId);
        }

        // Atualiza o ID do chat ativo
        activeChatId = chatId;

        // Redireciona para a tela de chat
        openChat(activeChatId);

        // Adiciona uma notifica√ß√£o para o dono do post (se o usu√°rio atual n√£o for o dono do post)
        if (userId !== postOwnerId) {
            await addNotification(chatId, userId, postOwnerId, postId);
        }
    } catch (error) {
        console.error("Erro ao iniciar o chat:", error);
        alert("Ocorreu um erro ao tentar iniciar o chat. Tente novamente.");
    }
}

// Fun√ß√£o para abrir o chat
function openChat(chatId) {
    console.log("Abrindo chat com ID:", chatId);

    // Oculta o feed e exibe a interface de chat
    document.getElementById('feedContainer').classList.add('hidden');
    document.getElementById('chatContainer').classList.remove('hidden');

    // Atualiza o ID do chat ativo
    activeChatId = chatId;

    // Carrega as mensagens do chat
    loadChatMessages(chatId);
}

// Fun√ß√£o para carregar mensagens do chat
function loadChatMessages(chatId) {
    const messagesRef = collection(db, "chats", chatId, "messages");
    const messagesContainer = document.getElementById('messages');

    // Limpa as mensagens anteriores
    messagesContainer.innerHTML = '';

    // Escuta por novas mensagens em tempo real
    onSnapshot(messagesRef, (snapshot) => {
        snapshot.forEach((doc) => {
            const message = doc.data();
            const messageElement = document.createElement('div');
            messageElement.textContent = `${message.sender}: ${message.text}`;
            messagesContainer.appendChild(messageElement);
        });
    });
}

// Fun√ß√£o para enviar mensagens
async function sendMessage(chatId) {
    const messageInput = document.getElementById('messageInput');
    const messageText = messageInput.value.trim();

    if (messageText) {
        const user = auth.currentUser;
        if (!user) {
            alert("Voc√™ precisa estar logado para enviar mensagens.");
            return;
        }

        try {
            // Adiciona a mensagem ao Firestore
            await addDoc(collection(db, "chats", chatId, "messages"), {
                sender: user.uid,
                text: messageText,
                createdAt: new Date().toISOString()
            });

            console.log("Mensagem enviada com sucesso!");
            messageInput.value = '';

            // Adiciona uma notifica√ß√£o para o outro usu√°rio
            const chatRef = doc(db, "chats", chatId);
            const chatDoc = await getDoc(chatRef);

            if (chatDoc.exists()) {
                const chatData = chatDoc.data();
                const users = chatData.users; // IDs dos participantes do chat

                // Encontra o ID do outro usu√°rio (n√£o o remetente)
                const otherUserId = users.find((userId) => userId !== user.uid);

                if (otherUserId) {
                    await addNotificationint(chatId, user.uid, otherUserId, chatData.postId);
                }
            }

            // Atualiza as notifica√ß√µes na interface
            loadNotificationsint();
        } catch (error) {
            console.error("Erro ao enviar mensagem:", error);
            alert("Ocorreu um erro ao tentar enviar a mensagem. Tente novamente.");
        }
    }
}

// Fun√ß√£o para adicionar notifica√ß√£o
async function addNotificationint(chatId, senderId, receiverId, postId) {
    try {
        // Busca os dados do usu√°rio remetente (quem enviou a mensagem)
        const senderRef = doc(db, "users", senderId);
        const senderDoc = await getDoc(senderRef);

        if (senderDoc.exists()) {
            const senderData = senderDoc.data();
            const userName = senderData.name || "Usu√°rio";
            const userPhone = senderData.phone || "N/A";

            // Adiciona a notifica√ß√£o ao documento do destinat√°rio
            const receiverRef = doc(db, "users", receiverId);
            await updateDoc(receiverRef, {
                notifications: arrayUnion({
                    type: "new_message",
                    message: `Voc√™ recebeu uma nova mensagem de ${userName} (${userPhone}).`,
                    chatId: chatId,
                    postId: postId,
                    timestamp: new Date().toISOString()
                })
            });

            console.log("Notifica√ß√£o adicionada para o usu√°rio:", receiverId);
        } else {
            console.error("Dados do remetente n√£o encontrados.");
        }
    } catch (error) {
        console.error("Erro ao adicionar notifica√ß√£o:", error);
    }
}

function loadNotificationsint() {
    const user = auth.currentUser;
    if (!user) {
        console.log("‚ùå Usu√°rio n√£o autenticado.");
        return;
    }

    const userRef = doc(db, "users", user.uid);

    onSnapshot(userRef, (docSnap) => {
        if (docSnap.exists()) {
            const userData = docSnap.data();
            console.log("üîç Dados do usu√°rio (tempo real):", userData);

            const notifications = userData.notifications || [];
            console.log("üì© Notifica√ß√µes carregadas (tempo real):", notifications);

            const notificationsList = document.getElementById('notificationsList');
            notificationsList.innerHTML = '';

            if (notifications.length === 0) {
                notificationsList.innerHTML = "<li>üì≠ Nenhuma notifica√ß√£o</li>";
                return;
            }

            notifications.forEach((notif) => {
                const li = document.createElement('li');
                li.textContent = notif.message;
                notificationsList.appendChild(li);
            });
        } else {
            console.log("‚ö†Ô∏è Documento do usu√°rio n√£o encontrado!");
        }
    }, (error) => {
        console.error("üî• Erro ao carregar notifica√ß√µes em tempo real:", error);
    });
}



// Fun√ß√£o para sair do chat
function exitChat() {
    console.log("Saindo do chat...");

    // Oculta o chat e exibe o feed
    document.getElementById('feedContainer').classList.remove('hidden');
    document.getElementById('chatContainer').classList.add('hidden');

    // Limpa o ID do chat ativo
    activeChatId = null;

    // Limpa as mensagens exibidas
    document.getElementById('messages').innerHTML = '';
}

// Configura o evento de clique no bot√£o "Enviar"
document.addEventListener('DOMContentLoaded', function () {
    const sendMessageButton = document.getElementById('sendMessageButton');
    if (sendMessageButton) {
        sendMessageButton.addEventListener('click', function () {
            if (activeChatId) {
                sendMessage(activeChatId);
            } else {
                alert("Nenhum chat ativo.");
            }
        });
    }
});

// Configura o evento de clique no bot√£o "Sair do Chat"
document.addEventListener('DOMContentLoaded', function () {
    const exitChatButton = document.getElementById('exitChatButton');
    if (exitChatButton) {
        exitChatButton.addEventListener('click', exitChat);
    } else {
        console.error("Bot√£o de sair do chat n√£o encontrado!");
    }
});
document.addEventListener('DOMContentLoaded', function () {
    // Seleciona todos os bot√µes com a classe "fecharVendaButton"
    const fecharVendaButtons = document.querySelectorAll('.fecharVendaButton');

    // Adiciona o evento de clique a cada bot√£o
    fecharVendaButtons.forEach(button => {
        button.addEventListener('click', async function () {
            const chatId = this.getAttribute('data-chat-id');  // Usar data-chat-id ao inv√©s de post-id
            const respostaFrete = confirm("Precisa de frete?");
            
            let listaFretistas = "";
            if (respostaFrete) {
                const fretistas = await buscarFretistasDisponiveis();
                if (fretistas.length > 0) {
                    listaFretistas = fretistas.join("\n");
                    alert(`üöö *Fretistas dispon√≠veis:*\n\n${listaFretistas}`);
                } else {
                    alert("Nenhum fretista dispon√≠vel no momento.");
                }
            }

            // Notifica o ADM sobre a resposta
            if (respostaFrete) {
                alert("Administrador notificado sobre a necessidade de frete.");
            } else {
                alert("Administrador notificado sobre a venda, sem necessidade de frete.");
            }
 
            // Enviar a notifica√ß√£o ao ADM com os nomes dos envolvidos e dos fretistas dispon√≠veis
            await enviarFretistasParaADM(respostaFrete, listaFretistas);
            // Marcar o post como vendido
       // Marcar o chat como vendido (n√£o usa mais postId)
       await marcarChatComoVendido(chatId);  // Aqui usamos o data-chat-id
        });
    });

    // Fun√ß√£o para marcar o chat como vendido
    async function marcarChatComoVendido(chatId) {
        try {
            const chatRef = doc(db, "chats", chatId);
            await updateDoc(chatRef, { status: "vendido" });  // Marca o chat como "vendido"
            alert("Venda conclu√≠da! O chat foi marcado como vendido.");
            window.location.reload(); // Atualiza a p√°gina para refletir as mudan√ßas
        } catch (error) {
            console.error("Erro ao marcar o chat como vendido:", error);
        }
    }


    async function buscarFretistasDisponiveis() {
        try {
            const usersRef = collection(db, "users");
            const q = query(usersRef, where("userType", "==", "fretista"));
            const querySnapshot = await getDocs(q);

            let fretistas = [];
            querySnapshot.forEach((doc) => {
                const userData = doc.data();
                if (userData.name && userData.phone) {
                    fretistas.push(`- ${userData.name} (üìû ${userData.phone})`);
                }
            });

            return fretistas;
        } catch (error) {
            console.error("Erro ao buscar fretistas:", error);
            return [];
        }
    }

    async function enviarFretistasParaADM(precisaFrete, listaFretistas) {
        try {
            if (!activeChatId) {
                console.error("Nenhum chat ativo encontrado.");
                return;
            }

            // Pega os dados do chat usando o activeChatId
            const chatDoc = await getDoc(doc(db, "chats", activeChatId));

            if (!chatDoc.exists()) {
                console.error("Chat n√£o encontrado para o chatId:", activeChatId);
                return;
            }

            const chatData = chatDoc.data();
            const usersIds = chatData.users; // IDs dos participantes do chat

            // Busca os nomes dos usu√°rios
            const usersNames = await Promise.all(
                usersIds.map(async (userId) => {
                    const userRef = doc(db, "users", userId);
                    const userDoc = await getDoc(userRef);
                    return userDoc.exists() ? userDoc.data().name : "Usu√°rio Desconhecido";
                })
            );

            // Cria a mensagem com os nomes dos envolvidos e dos fretistas dispon√≠veis
            let mensagem = `üö® *Venda Fechada!*\n\nüë• *Participantes:* ${usersNames.join(", ")}\nüì¶ *Necessita de Frete?* ${precisaFrete ? 'Sim' : 'N√£o'}`;

            if (precisaFrete && listaFretistas) {
                mensagem += `\nüöö *Fretistas dispon√≠veis:*\n${listaFretistas}`;
            }

            mensagem = encodeURIComponent(mensagem);

            // Envia a mensagem pelo WhatsApp usando CallMeBot
            await sendWhatsAppNotification(mensagem);
        } catch (error) {
            console.error("Erro ao enviar notifica√ß√£o: ", error);
        }
    }

    // Fun√ß√£o para enviar a notifica√ß√£o via WhatsApp
    async function sendWhatsAppNotification(message) {
        const url = `https://api.callmebot.com/whatsapp.php?phone=${+554396811736}&text=${message}&apikey=${1253447}`;

        try {
            const response = await fetch(url);
            if (!response.ok) {
                throw new Error("Erro ao enviar a mensagem pelo WhatsApp.");
            }
            console.log("Mensagem enviada com sucesso!");
        } catch (error) {
            console.error("Erro ao enviar mensagem: ", error);
        }
    }
});


